<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutTaskActivity"
    android:orientation="vertical"
    android:padding="8dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="@color/teal_700"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Button"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="#1FABE8"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Button"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="#B767D8"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Button"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="#F37766"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="TextView"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="#D67126"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="100"
            android:background="#71AC4A"
            android:gravity="center"
            android:text="EditText"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/x1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="#A5A5A5"
            android:gravity="center"
            android:text="EditText"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/x2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/x2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/x1"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="12dp"
            android:background="#06E7F9"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="Button"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/yelw"
            app:layout_constraintEnd_toEndOf="@+id/yelw" />

        <TextView
            android:id="@+id/yelw"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/x2"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="92dp"
            android:background="#FFC000"
            android:padding="10dp"
            android:text="EditText"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/x3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yelw"
            android:layout_alignBottom="@+id/yelw"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="#03B251"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="TextView"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="@+id/yelw"
            app:layout_constraintTop_toBottomOf="@+id/yelw" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>